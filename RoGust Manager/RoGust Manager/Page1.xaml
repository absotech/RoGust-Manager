                            <Label  Text="Nr cutii:" TextColor="#000" FontSize="25" WidthRequest="100" VerticalOptions="CenterAndExpand"/>
                            <Button x:Name="minus_cutii2f" WidthRequest="40" BorderColor="Black"  Text="-" Pressed="minus_cutii2f_Pressed"/>
