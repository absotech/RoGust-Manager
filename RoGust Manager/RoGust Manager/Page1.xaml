                        </StackLayout>
                        <StackLayout Orientation="Horizontal" Margin="10,0,0,0">
                        <Button x:Name="schimbacutie2f" Text="Cutie schimbată" WidthRequest="145" BorderColor="Black" TextColor="#000" Pressed="schimbacutie2f_Pressed" VerticalOptions="CenterAndExpand" HorizontalOptions="StartAndExpand" CornerRadius="20"/>
                        <Button x:Name="save2f" Text="Salveaza" WidthRequest="100" BorderColor="Black" TextColor="#000" Pressed="save2f_Pressed" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" CornerRadius="20"/>
                        </StackLayout>

                        <!-- 30.5-->
                        <Grid ColumnSpacing="0" RowSpacing="0" Margin="0">
                            <Grid.RowDefinitions >
                                <RowDefinition Height="50"/>
                            </Grid.RowDefinitions>
                            <Label FontAttributes="Bold" FontSize="21" TextColor="#000" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Text="Fiole 30.5"/>
                        </Grid>
                        <StackLayout Orientation="Horizontal" Margin="10,0,0,0">
                            <Label  Text="Cicluri: " TextColor="#000" FontSize="25" WidthRequest="100"  VerticalOptions="CenterAndExpand"/>
                            <Button x:Name="minus_ciclu3f" WidthRequest="40" BorderColor="Black"  Text="-" Pressed="minus_ciclu3f_Pressed"/>
                            <Entry x:Name="cicluri3f_text" Text="0" MaxLength="5" WidthRequest="60" Keyboard="Numeric"  TextChanged="cicluri3f_text_TextChanged">
								<Entry.BindingContext>
									<local:Person/>
								</Entry.BindingContext>
                            </Entry>
                            <Button x:Name="plus_ciclu3f" WidthRequest="40" BorderColor="Black" Text="+" Pressed="plus_ciclu3f_Pressed"/>
                        <Button x:Name="sendcicluri3f" WidthRequest="65" BorderColor="Black" Text="Fisier" Pressed="sendcicluri3f_Pressed" CornerRadius="20"/>
                            <Label x:Name="peturi3f_text" Text="" TextColor="Green" FontSize="25"/>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal" Margin="10,0,0,0">
                            <Label  Text="Nr cutii:" TextColor="#000" FontSize="25" WidthRequest="100" VerticalOptions="CenterAndExpand"/>
                            <Button x:Name="minus_cutii3f" WidthRequest="40" BorderColor="Black"  Text="-" Pressed="minus_cutii3f_Pressed"/>
                            <Entry x:Name="cutii3f_text" Text="0" MaxLength="2" Keyboard="Numeric" WidthRequest="60" />
                            <Button x:Name="plus_cutii3f" WidthRequest="40" BorderColor="Black" Text="+" Pressed="plus_cutii3f_Pressed"/>
                        <Button x:Name="save_cutii3f" WidthRequest="65" BorderColor="Black" Text="Fisier" Pressed="save_cutii3f_Pressed" CornerRadius="20"/>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal" Margin="10,0,0,0">
                            <Label  Text="Mentiuni" TextColor="#000" FontSize="25" VerticalOptions="CenterAndExpand"/>
                        <Entry x:Name="mentiuni_text3f" Placeholder="Introduceti mentiunile aici" WidthRequest="280"/>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal" Margin="10,0,0,0">
